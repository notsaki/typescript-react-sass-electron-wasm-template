{
	"name": "typescript-react-sass-electron-wasm-template",
	"version": "0.0.5",
	"description": "Template for TypeScript combined with React, SASS, Electron and Web Assembly.",
	"main": "dist/main.js",
	"scripts": {
		"react:dev": "NODE_ENV=development webpack serve --config webpack.react.config.js --port 3000",
		"react:build": "NODE_ENV=production webpack --config webpack.react.config.js",
		"electron:dev": "NODE_ENV=development webpack --config webpack.electron.config.js --mode development && electron .",
		"electron:prod": "yarn react:build && NODE_ENV=production webpack --config webpack.electron.config.js --mode production && electron .",
		"wasm:build": "cd ./src/wasm && wasm-pack build --out-dir ../../wasm-build && yarn wasm:update",
		"wasm:update": "yarn upgrade wasm"
	},
	"repository": "git@github.com:notsaki/typescript-react-sass-electron-wasm-template.git",
	"author": "Grigoris Tsakouridis",
	"license": "MIT",
	"dependencies": {
		"dotenv-webpack": "^7.0.3",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"react-router": "^6.0.2",
		"react-router-dom": "^6.0.2",
		"wasm": "./wasm-build",
		"wasm-pack": "^0.10.2"
	},
	"devDependencies": {
		"@babel/core": "^7.17.5",
		"@babel/plugin-transform-runtime": "^7.16.4",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-react": "^7.16.7",
		"@babel/preset-typescript": "^7.16.7",
		"@types/node-sass": "^4.11.2",
		"@types/react": "^18.0.9",
		"@types/react-dom": "^18.0.4",
		"@types/react-router": "^5.1.17",
		"@types/react-router-dom": "^5.3.2",
		"@wasm-tool/wasm-pack-plugin": "^1.6.0",
		"babel-loader": "^8.2.3",
		"css-loader": "^6.5.1",
		"electron": "^18.3.7",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.5.0",
		"node-sass": "^7.0.0",
		"process": "^0.11.10",
		"sass-loader": "^13.0.0",
		"style-loader": "^3.3.1",
		"terser-webpack-plugin": "^5.2.5",
		"ts-loader": "^9.2.6",
		"typescript": "^4.4.4",
		"url-loader": "^4.1.1",
		"wasm-loader": "^1.3.0",
		"webpack": "^5.69.1",
		"webpack-cli": "^4.9.2",
		"webpack-dev-server": "^4.7.4"
	}
}
